<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:paddingLeft="10dp"
        android:background="@drawable/search"
        android:id="@+id/edt_checker_id"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:drawableLeft="@drawable/id_3"

        android:textColorHint="@color/com_facebook_button_background_color_selected"
        android:hint="Enter id checker"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/name"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/search"
        android:id="@+id/edt_checker_name"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@+id/edt_checker_id"
        android:gravity="center"
        android:textColorHint="@color/com_facebook_button_background_color_selected"
        android:hint="Enter checker name" />
</RelativeLayout>